<script>
    let blockOpen = [false, ""];
    let openedArticles = {
        t_1 : false,
        t_2 : false,
        t_3 : false, 
        b_1 : false,
        b_2 : false
    };
    var elem = document.body; // Make the body go full screen.
    document.addEventListener("keydown", function(e) {
      if (e.keyCode == 192) {
        requestFullScreen(elem);
      } else if (e.keyCode == 13) {
        getInfo();
      }
    })
    function requestFullScreen(element) {
      // Supports most browsers and their versions.
      var requestMethod = element.requestFullScreen || element.webkitRequestFullScreen || element.mozRequestFullScreen || element.msRequestFullScreen;

      if (requestMethod) { // Native full screen.
          requestMethod.call(element);
      } else if (typeof window.ActiveXObject !== "undefined") { // Older IE.
          var wscript = new ActiveXObject("WScript.Shell");
          if (wscript !== null) {
              wscript.SendKeys("{F11}");
          }
      }
    }
    function dropDown(item) {
        if (item === "dilema") {
            let dilema = document.getElementById("dilemaDropDown");
            dilema.classList.toggle("dropped");
            document.getElementById("dilemaTitle").innerHTML = dilema.classList.contains("dropped") ? "Dilema <span class = 'selectArrow upArrow'> &#9660;</span>" : "Dilema <span class = 'selectArrow'> &#9660;</span>";
        } else if (item === "sources") {
            let sources = document.getElementById("sourcesDropDown");
            sources.classList.toggle("dropped");
            document.getElementById("sourcesTitle").innerHTML = sources.classList.contains("dropped") ? "Sources <span class = 'selectArrow upArrow'> &#9660;</span>" : "Sources <span class = 'selectArrow'> &#9660;</span>";
        } else {
            let articles = document.getElementById("articlesDropDown");
            articles.classList.toggle("dropped");
            document.getElementById("articlesTitle").innerHTML = articles.classList.contains("dropped") ? "Articles <span class = 'selectArrow upArrow'> &#9660;</span>" : "Articles <span class = 'selectArrow'> &#9660;</span>";
        }
    }
    function contentClickFunction(element) {
        openedArticles[element.id] = true;
        if (blockOpen[0]) {
            if (element.id == blockOpen[1]) {
                document.getElementById(blockOpen[1]).classList.remove("contentClicked_top", "contentClicked", "contentClicked_bottom");
                let contentBoxes = document.getElementsByClassName("contentBox");
                for (var i = 0; i < contentBoxes.length; i++) {
                    contentBoxes[i].classList.remove("lowOpacity");
                }
                blockOpen = [false, ""];
                let allOpened = true;
                for (var key in openedArticles) {
                    if (!openedArticles[key]) {
                        allOpened = false;
                    }
                }
                if (allOpened) {
                    openArticle("finalContentBox");
                }
            } else {
                document.getElementById(blockOpen[1]).classList.remove("contentClicked_top", "contentClicked", "contentClicked_bottom");
                element.classList.toggle("contentClicked");
                if (element.id.split("_")[0] === "t") {
                    element.classList.toggle("contentClicked_top");
                } else {
                    element.classList.toggle("contentClicked_bottom");
                }
                blockOpen = [true, element.id];
            }
            
        } else {
            let contentBoxes = document.getElementsByClassName("contentBox");
            for (var i = 0; i < contentBoxes.length; i++) {
                contentBoxes[i].classList.toggle("lowOpacity");
            }
            element.classList.toggle("contentClicked");
            if (element.id.split("_")[0] === "t") {
                element.classList.toggle("contentClicked_top");
            } else {
                element.classList.toggle("contentClicked_bottom");
            }
            blockOpen = [true, element.id];
        }
        
        
    }
    function openArticle(article) {
        if (article == "finalContentBox") {
            let contentBoxes = document.getElementsByClassName("contentBox");
            for (var i = 0; i < contentBoxes.length; i++) {
                contentBoxes[i].classList.toggle("lowOpacity");
            }
            document.getElementById(article).classList.toggle("noOpacity");
            document.getElementById("articlesDropDown").classList.remove("dropped");
            document.getElementById("articlesTitle").innerHTML = "Articles <span class = 'selectArrow'> &#9660;</span>";
        } else {
            contentClickFunction(document.getElementById(article));
            document.getElementById("articlesDropDown").classList.remove("dropped");
            document.getElementById("articlesTitle").innerHTML = "Articles <span class = 'selectArrow'> &#9660;</span>";
        }
        
    }
</script>
