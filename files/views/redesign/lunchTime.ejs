<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src = "/public/js/asyncRequest.js" type = "text/javascript"></script>
    <title>Before School Activities</title>
    <style>
    * {
          box-sizing: border-box;
          font-family: sans-serif;
          font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif
      }
      html, body {
        width: 100%;
        height: 100%;
        margin: 0;
        padding: 0;
        position: fixed;
        top: 0;
        left: 0; 
      }
      .homeHolder {
          width: 100%;
          height: 100%;
          display: flex;
          flex-direction: column;
          flex-wrap: nowrap;
          overflow: hidden;
      }
      .backdrop {
        height: calc(100% - 50px);
        overflow-y: auto;
        -webkit-overflow-scrolling: auto;
        background-color: rgb(240,240,240);
      }
      .homeHeader {
          width: 100%;
          height: 50px;
          background: linear-gradient(to right, rgb(0,153,153), rgb(0,130,209));
      }
      .homeRow {
          width: 100%;
          height: 100%;
          display: flex;
          flex-direction: row;
          flex-wrap: nowrap;
          justify-content: space-between;
          padding: 0px 20px;
          align-items: center;
      }
      .displayText {
          color: white;
          font-size: 24px;
      }
      .bodyLine {
          width: 100%;
          height: 50px;
          display: flex;
          justify-content: start;
          align-items: center;
      }
      .bodySection {
          margin-top: 20px;
          border-bottom: 1px solid rgb(210,210,210);
          border-top: 1px solid rgb(210,210,210);
      }
      .infoRow {
          flex-grow: 1;
          display: flex;
          flex-direction: row;
          justify-content: space-between;
      }
      .displayText {
        color: white;
        font-size: 24px;
        font-weight: 300;
        }
        .backIcon {
            color: white;
            font-size: 22px;
            font-weight: 300;
        }
        .spacerIcon {
            color: white;
            font-size: 22px;
            visibility: hidden;
            font-weight: 300;
        }
        .iconRow {
            width: 100%;
            height: 50px;
            display: flex;
            flex-direction: row;
            align-items: center;
            background-color: white;
        }
        .infoRow {
            height: 100%;
            display: flex;
            flex-direction: row;
            align-items: center;
            flex-grow: 1;
            border-bottom: 1px solid rgb(210,210,210);
            justify-content: space-between;
            /* padding-left: 5px; */
            padding-right: 5px;
        }
        .submitAll {
            width: 120px;
            text-align: center;
            margin: auto;
            padding-top: 13px;
            padding-bottom: 13px;
            border-radius: 7px;
            border: 1px solid orange;
            margin-bottom: 20px;
            color: orange;
        }
        .submitAll input {
            color: orange;
            font-size: 15px;
            appearance: none;
            -webkit-appearance: none;
            border-radius: 0px;
            background-color: transparent;
            border: 0;
            outline: none
        }
        .otherWrapper {
            width: 95%;
            position: relative;
            margin-top: 5px;
        }
        .otherInput {
            background-color: transparent;
            border: 0;
            border-bottom: 1px solid #9e9e9e;
            border-radius: 0;
            outline: none;
            width: 100%;
            height: 40px;
            font-size: 16px;
            padding-top: 5px;
        }
        .otherInput:focus {
            border-bottom: 2px solid #29a69a;
        }
        .otherLabel {
            color: #9e9e9e;
            position: absolute;
            top: 10px;
            left: 0;
            font-size: 1rem;
            cursor: text;
            font-size: 16px;
            transform: translate(0, 0) scale(1);
            transition: transform 0.1s ease-out;
            will-change: transform;
        }
        .activeLabel {
            transform: translate(-14%, -100%) scale(0.7);
            color: #29a69a;
        }

        .dayTile {
            width: 90%;
            background-color: white;
            box-shadow: 2px 3px 6px rgba(0,0,0,0.25);
            border-radius: 6px;
            padding: 10px;  
            margin: auto;
            margin-top: 15px;
            margin-bottom: 15px;
            text-align: left;
        }
        .dayTileTitle {
            font-size: 18px;
            font-weight: 700;
            color: rgba(0,0,0,0.6);
        }
        .activityTile {
            padding: 7px 15px;
            background-color: #eee;
            display: inline-block;
            border-radius: 100px;
            margin: 5px 10px;
            font-weight: 500;
            color: rgba(0,0,0,0.5);
            padding-right: 35px;
            position: relative;
        }
        .removeActivity {
            position: absolute;
            top: 50%;
            right: 10px;
            opacity: 0.7;
            transform: translateY(calc(-50% + 3px)) scale(0.9);
        }
        .addActivity {
            position: absolute;
            right: 0px;
            /* top: 50%; */
            top: 0;
            transform: translateX(-50%);
            font-size: 35px;
            color: #9e9e9e;
        }
    
    </style>
</head>
<body>
    <div class="homeHolder">
        <div class="homeHeader">
            <div class="homeRow">
                <div class="backIcon" onclick = "window.location='/account'"><i class="fas fa-chevron-left"></i></div>
                <div class="displayText">Lunch Time Activities</div>
                <div class="spacerIcon"><i class="fas fa-chevron-left"></i></div>
            </div>
        </div>
        <div class="backdrop">
            <% for (var key in activities) { %>
                <div class="dayTile">
                    <div class="dayTileTitle">
                        <%={day1: "Monday", day2: "Tuesday", day3: "Wednesday", day4: "Thursday", day5: "Friday"}[key]%>
                    </div>
                    <div class="dayTileActivitiesList" id = "list_<%=key%>">
                        <% for (var i = 0; i < activities[key].length; i++) { %>
                            <div class="activityTile" day = "<%=key%>">
                                <%=activities[key][i]%>
                                <span class = "removeActivity" onclick = "removeFunction(this)"><svg focusable="false" xmlns="https://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12 19 6.41z"></path></svg></span>
                            </div>
                        <% } %>
                        <% if (activities[key].length == 0) { %>
                            <div class="activityTile activityPlaceholder" style = "padding-right: 20px">
                                No Activities Yet!
                            </div>
                        <% } %>
                    </div>
                    <div class="dayTileInput">
                        <div class="otherWrapper">
                                <input type="text" onkeyup = "if (event.keyCode == 13) {checkIfEnter(this)}" class = "otherInput" name = "<%=key%>" onfocus="focusCustom(this)" onblur="blurCustom(this)" id = "input_<%=key%>">
                            <label for = "input_<%=key%>" class = "otherLabel">Add Activity</label>
                            <div class = "addActivity" onclick = "addFunction(this)">+</div>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
    <script>
        function checkIfEnter(element) {
            let value = element.parentNode.children[0].value;
            let day = element.parentNode.children[0].name;
            blurCustom(element);
            element.parentNode.children[0].value = "";
            if (value && day) {
                sendPostRequest("activity=" + value + "&day=" + day, "/before-school", function(res) {
                    let tag = document.createElement("div");
                    tag.className = "activityTile";
                    tag.setAttribute("day", day);
                    tag.innerHTML = `${value} <span onclick = "removeFunction(this)" class = "removeActivity"><svg focusable="false" xmlns="https://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12 19 6.41z"></path></svg></span>`;
                    let parent = document.getElementById("list_" + day);
                    if (parent.children[0].classList.contains("activityPlaceholder")) {
                        parent.removeChild(parent.children[0]);
                    }
                    parent.appendChild(tag);
                });
            }
        }
        function focusCustom(element) {
            element.parentNode.children[1].classList.add("activeLabel");
            element.parentNode.children[2].style = "color: #29a69a;";
        } 
        function blurCustom(element) {
            if (!element.value) {
                element.parentNode.children[1].classList.remove("activeLabel");
                element.parentNode.children[2].style = "color: #9e9e9e;";
            }
        }
        function removeFunction(element) {
            let value = element.parentNode.innerText;
            let day = element.parentNode.getAttribute("day");
            if (value && day) {
                sendPostRequest("removed=" + value + "&day=" + day, "/lunch-time", function(res) {
                    if (res[0] == true) {
                        element.parentNode.parentNode.removeChild(element.parentNode);
                    }
                });
            }
        }
        function addFunction(element) {
            let value = element.parentNode.children[0].value;
            let day = element.parentNode.children[0].name;
            blurCustom(element);
            element.parentNode.children[0].value = "";
            if (value && day) {
                sendPostRequest("activity=" + value + "&day=" + day, "/lunch-time", function(res) {
                    let tag = document.createElement("div");
                    tag.className = "activityTile";
                    tag.setAttribute("day", day);
                    tag.innerHTML = `${value} <span onclick = "removeFunction(this)" class = "removeActivity"><svg focusable="false" xmlns="https://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12 19 6.41z"></path></svg></span>`;
                    let parent = document.getElementById("list_" + day);
                    if (parent.children[0].classList.contains("activityPlaceholder")) {
                        parent.removeChild(parent.children[0]);
                    }
                    parent.appendChild(tag);
                });
            }
        }
    </script>
</body>
</html>