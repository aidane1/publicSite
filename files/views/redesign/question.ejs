<body onload = "replaceLineBreak()">
    <div class="homeHeader">
        <div class="homeRow">
            <div class="backIcon" onclick = "window.location='/questions'"><i class="fas fa-chevron-left"></i></div>
            <div class="displayText">Question</div>
            <div class="spacerIcon"><i class="fas fa-chevron-left"></i></div>
        </div>
    </div>
    <div class="backdrop">
        <div class="post">
            <div class="postTitle">
                <%=post.title%>
            </div>
            <div class="postBody">
                <%=post.body%>
            </div>
            <div class="iconsBar">
                <div class="submittedBy">
                    by <%=post.submittedBy%>
                </div>
                <i class="fas fa-reply" onclick = "openCreateComment('post', 'AidanEglin', '<%=JSON.stringify([post._id])%>', 0)"></i>
                <div class="icons">
                    <i class="fas fa-ellipsis-h"></i>
                    <i class="far fa-heart"></i>
                </div>
            </div>
        </div>
        <div class="comments">
            <% for (var i = 0; i < comments.length; i++) { %>
                <div class="comment" id = "1">
                    <div class="commentMargin" style = "border-left: 5px solid <%=colours[comments[i].depth%colours.length]%>;margin-left: <%=100-(comments[i].depth*6 < 30 ? 100-comments[i].depth*6-5 : 65)%>%; width: <%=comments[i].depth*6 < 30 ? 100-comments[i].depth*6-5 : 65%>%;">
                        <div class="commentTopBar">
                            <div class="commentSubmittedBy">
                                By <%=comments[i].submittedBy%>
                            </div>
                            <div class="icons">
                                <i class="fas fa-reply" onclick = "openCreateComment('comment', '<%=comments[i].submittedBy%>', '<%comments[i].parents.push(comments[i]._id)%><%=JSON.stringify(comments[i].parents)%>', '<%=comments[i].depth+1%>')"></i>
                                <i class="fas fa-ellipsis-h"></i>
                            </div>
                        </div>
                        <div class="commentBody">
                            <%-comments[i].body.replace(/&/g,'&amp;').replace(/</g,'&lt;').replace(/>/g,'&gt;').replace(/\n/g, "<br>")%>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
    <div class="createComment" id = "createComment">
        <div class="createCommentTopBar">
            <div class="commentAction" onclick="closeCreateComment()">
                Cancel
            </div>
            <div class="commentTitle">
                Comment
            </div>
            <div class="commentAction" onclick = "createCommentPost()">
                Post
            </div>
        </div>
        <div class="replyToBox" id = "replyToBox">Replying to a comment by AidanEglin</div>
        <div class="createCommentBox">
            <textarea id="createCommentTextarea" depth = "0" parents = "_" placeholder="Comment..."></textarea>
        </div>
    </div>
</body>
<script>
    function openCreateComment(type, username, parents, depth) {
        let modal = document.getElementById("createComment");
        let box = document.getElementById("replyToBox");
        box.innerText = `Replying to a ${type} by ${username}`;
        let textarea  = document.getElementById("createCommentTextarea");
        textarea.setAttribute("parents", parents);
        textarea.setAttribute("depth", depth.toString());
        modal.style.transform = "translateY(0%)";
        // textarea.focus();
    }
    function closeCreateComment() {
        let modal = document.getElementById("createComment");
        modal.style.transform = "translateY(100%)";
    }
    function createCommentPost() {
        let textarea  = document.getElementById("createCommentTextarea");
        let comment = textarea.value;
        let parents = textarea.getAttribute("parents");
        let depth = textarea.getAttribute("depth");
        let sendObject = {
            comment: comment,
            parents: parents,
            depth: depth,
        }
        postObject(sendObject, "/questions/<%=post._id%>", function(res) {
            location.reload();
        });
    }
