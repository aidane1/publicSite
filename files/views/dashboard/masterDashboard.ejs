    function toggleSideBar(schedule, day, block) {
        document.getElementById("extendedScheduleBar").classList.toggle("extended");
        document.getElementById("submitChanges").setAttribute("onclick", `submitBlockChanges(${schedule}, '${day}', ${block})`);
    }

    function submitBlockChanges(schedule, day, block) { 
        var block = document.getElementById("sideBlockSelector").value;
        var startTimeHour = document.getElementById("startHourSelect").value;
        var startTimeMinute = document.getElementById("startMinuteSelect").value;
        var endTimeHour = document.getElementById("endHourSelect").value;
        var endTimeMinute = document.getElementById("endMinuteSelect").value;
        let postMap = {
            schedule: schedule,
            day: day,
            block: block,
            startTime: [startTimeHour, startTimeMinute],
            endTime: [endTimeHour, endTimeMinute],
            block: block,
        };
        sendToServer("/updateBlock", postMap);
    }
