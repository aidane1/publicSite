          <div class = "labelInput"><label for "logword">Password: </label><input type = "password" name = "logword" placeholder = "Enter Password..."class = "userInput" required onkeypress="return (event.charCode >= 65 && event.charCode <= 90) || (event.charCode >= 97 && event.charCode <= 122) || (event.charCode >= 48 && event.charCode <= 57)" maxlength="40"/></div>
          <br>
          <input type = "submit" id = "submit">
        </form>
