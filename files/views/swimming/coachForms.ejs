<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Coaches Forms</title>
    <style>
         * {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            box-sizing: border-box;            
        }
        html, body {
            width: 100%;
            padding: 0;
            margin: 0;
            background-color: #f6f6f6;
        }
        .forms {
            width: 90%;
            margin: auto;
            padding: 10px 0px;
        }
        .form {
            margin: 80px 0px;
            font-size: 18px;
        }
        .form-field-name {
            font-weight: 800;
        }
        .form-field {
            padding: 5px 0px;
        }
    </style>
</head>
<body>
    <div class="forms">
        <% for (var i = 0; i < forms.length; i++) { %>
            <div class="form">
                <div class="form-field">
                    <div class="form-field-name">Name: </div>
                    <div class="form-field-value">
                        <%=forms[i].name%>
                    </div>
                </div>
                <div class="form-field">
                    <div class="form-field-name">Practice Day: </div>
                    <div class="form-field-value">
                        <%=forms[i].practiceDay%>
                    </div>
                </div>
                <div class="form-field">
                    <div class="form-field-name">Practice Session: </div>
                    <div class="form-field-value">
                        <%=forms[i].practiceSession%>
                    </div>
                </div>
                <div class="form-field">
                    <div class="form-field-name">Practice Description: </div>
                    <div class="form-field-value">
                        <%=forms[i].description || "None"%>
                    </div>
                </div>
                <div class="form-field">
                    <div class="form-field-name">Attended Activation: </div>
                    <div class="form-field-value">
                        <%=forms[i].attendedActivation%>
                    </div>
                </div>
                <div class="form-field">
                    <div class="form-field-name">Completed Activation: </div>
                    <div class="form-field-value">
                        <%=forms[i].completedActivation%>
                    </div>
                </div>
                <div class="form-field">
                    <div class="form-field-name">Activation Intention: </div>
                    <div class="form-field-value">
                        <%=forms[i].activationIntention%>
                    </div>
                </div>
                <div class="form-field">
                    <div class="form-field-name">Attended Swim: </div>
                    <div class="form-field-value">
                        <%=forms[i].attendedSwim%>
                    </div>
                </div>
                <div class="form-field">
                    <div class="form-field-name">Completed Swim: </div>
                    <div class="form-field-value">
                        <%=forms[i].completedSwim%>
                    </div>
                </div>
                <div class="form-field">
                    <div class="form-field-name">Swim Intention: </div>
                    <div class="form-field-value">
                        <%=forms[i].swimIntention%>
                    </div>
                </div>
                <div class="form-field">
                    <div class="form-field-name">Soreness: </div>
                    <div class="form-field-value">
                        <%=forms[i].soreness%>
                    </div>
                </div>
                <div class="form-field">
                    <div class="form-field-name">Feeling: </div>
                    <div class="form-field-value">
                        <%=forms[i].feeling%>
                    </div>
                </div>
                <div class="form-field">
                    <div class="form-field-name">Mood: </div>
                    <div class="form-field-value">
                        <%=forms[i].mood%>
                    </div>
                </div>
                <div class="form-field">
                    <div class="form-field-name">Extra Names: </div>
                    <div class="form-field-value">
                        <%=forms[i].customNotes || "No Notes!"%>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
    
</body>
</html>