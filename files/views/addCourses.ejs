    <style>
      @font-face {
        font-family: sansFont;
        src: url("<%=font%>")
      }
      :root {
        --bg-color: <%=colours.bgColor%>;
        --info-color: <%=colours.infoColor%>;
        --button-color: <%=colours.buttonColor%>;
        --border-color: <%=colours.borderColor%>;
        --text-color: <%=colours.textColor%>;
      }

      * {
        font-family: sansFont, sans-serif;
        box-sizing: border-box;
        color: <%=colours.textColor%>;
      }
      html {
        -webkit-text-size-adjust: 100%;
      }
      body {
        padding: 0px;
        margin: 0px;
        background-color: <%=colours.bgColor%>;
      }
      label {

      }
      .courseHolder {
        width: 100%;
        height: 100%;
        display: block;
        margin: auto;
        margin-top: 10px;
        overflow: auto;
      }

      .display {
        padding: 10px;
        font-size: 15px;

      }
      .done {
        width: 100%;
        height: 60px;
        display: block;
        font-size: 25px;
        background-color: <%=colours.buttonColor%>;
        border: 2px solid <%=colours.borderColor%>;
        border-radius: 9px;
        outline: none;
        position: fixed;
        bottom: 0px;
      }


      #header {
        display: block;
        margin: auto;
        width: 200px;
        font-size: 20px;
        margin-top: 5px;
      }
      .later {
        width:60px;
        height: 30px;
        background-color: <%=colours.buttonColor%>;
        position: absolute;
        left: 0px;
        top: 0px;
        border-radius: 10px;
      }
      .later a {
        text-decoration: none;
        font-size: 15px;
        color: <%=colours.textColor%>;

      }

      .course {
        padding: 5%;
        background-color: <%=colours.infoColor%>;
        border: 1px solid <%=colours.borderColor%>;
        text-align: center;
        font-size: 18px;
        border-radius: 5px;
      }
      .courseContent {
        display: none;
        font-size: 13px;
        text-align: center;
      }
      .displayed .courseContent {
        display: block;
      }
      .courseName {
        width: 100%;
        padding: 7px;
        border: 1px solid <%=colours.borderColor%>;
        font-size: 14px;
      }

      .displayCourses {
        font-size: 15px;
      }
      .classInfo {
        width: 95%;
        display: block;
        text-align: center;
        background-color: <%=colours.infoColor%>;
        margin: auto;
        border-radius: 10px;
        padding: 10px;
        margin-bottom: 10px;
      }
      .preview {
        display: block;
        width: 150px;
        margin: auto;
        border-collapse: collapse;
      }
      .previewBox {
        height: 100px;
        width: 150px;
      }
      .extraBox {
        height: 50px;
        width: 150px;
      }
      .preview td {
        border: 2px solid black;
      }
      @media screen and (min-width: 768px) {
        .courseHolder {
          display: flex;
        }
        .course {
          flex-grow: 1;
          padding: 0px;
          padding-top: 5%;
          padding-bottom: 5%;

        }
        .courseContent {


        }
        .courseName {

          width: 80%;
          display: block;
          margin: auto;
        }
      }



