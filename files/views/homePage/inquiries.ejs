    </div>
    <script>
      function toggleNavbarBottom() {
        document.getElementById("navbar-bottom-expand").classList.toggle("navbar-bottom-expanded");
      }
      function toggleCardBottom(card) {
        for (var i = 0; i < card.children.length; i++) {
          if (card.children[i].classList.contains("card-cover")) {
            if (card.children[i].getAttribute("expanded") != "true") {
              card.children[i].style.maxHeight = "100%";
              card.children[i].setAttribute("expanded", "true");
            } else {
              card.children[i].style.maxHeight = "0px";
              card.children[i].setAttribute("expanded", "false");
            }
          }
        }
      }
    
    </script>

