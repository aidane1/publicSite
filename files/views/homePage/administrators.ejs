        width: 100%;
        height: 100%;
        fill: white;
      }
      .feature-list {
        width: 80%;
        margin: auto;
        margin-top: 20px;
      }
      .feature-title {
        font-size: 28px;
      }
      .feature-body {
        width: 90%;
      }
      .feature-body-item {
        width: 20%;
        display: inline-block;
        padding: 15px;
      }
      .card-box {
        width: 100%;
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: space-around;
      }
      .card {
        width: 300px;
        box-shadow: 0 2px 2px 0 rgba(0,0,0,0.14), 0 3px 1px -2px rgba(0,0,0,0.12), 0 1px 5px 0 rgba(0,0,0,0.2);
        display: inline-block;
        margin: 20px 50px 30px 50px;
        flex-grow: 0;
        height: 0%;
        position: relative;
      }
      .card-body {
        height: 200px;
      }
      .card-body .screen {
        height: 95%;
        margin: auto;
        margin-top: 2.5%;
      }
      .card-body .dashboard {
        width: 100%;
        height: 100%;
        position: relative;
      }
      .dashboard img {
        display: block;
        margin: auto;
        width: 100%;
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
      }
      .screen img {
        display: block;
        margin: auto; 
        height: 100%;
      }
      .card-bottom {
        background-color: #f5f5f5;
        padding: 10px 5px;
        position: relative;
      }
      .card-bottom-title {
        font-size: 20px;
        font-weight: 600;
        width: 87%;
      }
      .card-cover {
        width: 100%;
        height: 100%;
        position: absolute;
        bottom: 0px;
        left: 0px;
        max-height: 0px;
        overflow: hidden;
        transition: max-height 0.2s ease-out;
        background-color: white;
      }
      .card-cover-title-row {
        width: 100%;
        padding: 15px 10px;
        text-align: justify;
      }
      .card-cover-body {
        width: 100%;
        padding: 0px 20px;
        font-weight: 300;
      }
      .card-cover-title {
        font-size: 22px;
        font-weight: 600;
        display: inline-block;
        width: 80%;
        vertical-align:text-top;
        text-align: left;
      }
      .close-card-cover {
        display: inline-block;
        cursor: pointer;
        position: relative;
        top: 10px;
      }
      .justify-bottom-row {
        width: 100%;
        height: 0px;
        display: inline-block;
      }
      .ellipsis {
        height: 30px;
        width: 30px;
        text-align: center;
        position: absolute;
        top: calc(50% + 5px);
        transform: translateY(-50%);
        right: 15px;
        cursor: pointer;
      }
      .ellipsis img {
        height: 100%;
      }
      @media screen and (max-width: 980px) {
        .navbar {
          padding-left: 5px;
        }
