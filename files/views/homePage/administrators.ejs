    <style>
      * {
        box-sizing: border-box;
        font-family: 'Lato', sans-serif;
      }
      html, body {
        width: 100%;
        height: 100%;
        padding: 0px;
        margin: 0px;
      }
      .navbar {
        width: 100%;
        height: 130px;
        background-color: #316e97;
        display: flex;
        flex-direction: row;
        align-items: center;
        padding: 0px 50px;
        justify-content: start;
        position: relative;
      }
      .navbar-bottom-expand {
        width: 100%;
        height: 265px;
        max-height: 0px;
        overflow: hidden;
        background-color: #316e97;
        transition: max-height 0.2s ease-out;
      }
      .navbar-bottom-expanded {
        max-height: 265px;
      }
      .navbar-bottom-expand-item {
        width: 100%;
        padding: 15px 30px;
        color: white;
        font-size: 17px;
      }
      .navbar-bottom-expand-item a {
        text-decoration: none;
        color: inherit;
      }
      .navbar-bottom-expand a:hover {
        color: #ede053;
      }
      .navbar-items-holder {
        flex-grow: 1;
        display: flex;
        flex-direction: row;
        justify-content: space-around;
      }
      .logo-holder {
        height: 75%;
      }
      .logo {
        height: 100%;
      }
      .navbar-item {
        color: white;
        font-size: 22px;
        display: inline-block;
        margin: 0px 20px;
        cursor: pointer;
      }
      .navbar-item a {
        text-decoration: none;
        color: inherit;
      }
